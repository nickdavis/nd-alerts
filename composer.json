{
  "name": "nickdavis/nd-alerts",
  "description": "WordPress plugin to manage and deliver alert messages to the front end a website. Requires developer setup.",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Nick Davis",
      "email": "inbox@nickdavis.co"
    }
  ],
  "config": {
    "platform": {
      "php": "7.0.28"
    }
  },
  "require": {
    "php": ">=7.0",
    "brightnucleus/view": "^0.4.0",
    "johnbillion/extended-cpts": "^4.2"
  },
  "autoload": {
    "psr-4": {
      "NickDavis\\Alerts\\": "includes/classes/"
    }
  },
  "require-dev": {
    "10up/wp_mock": "dev-dev",
    "10up/phpcs-composer": "dev-master"
  },
  "scripts": {
    "lint": "phpcs .",
    "lint-fix": "phpcbf ."
  }
}
